# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/scaleops6
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scaleops6
DB_USER=scaleops6_user
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=scaleops6-storage
S3_BUCKET_REPORTS=scaleops6-reports
S3_BUCKET_DOCUMENTS=scaleops6-documents

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@scaleops6.com

# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_change_this_in_production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_REDIS_CACHE=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false
ENABLE_AUDIT_LOG=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30d

# Stripe Configuration (for future billing)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Organization Defaults
DEFAULT_ORG_SEATS=5
DEFAULT_ORG_STORAGE_GB=10
DEFAULT_TRIAL_DAYS=14
MAX_FILE_UPLOAD_SIZE_MB=50